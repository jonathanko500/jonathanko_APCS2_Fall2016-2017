    // TODO: Fill in the space below with any helper methods that you think you will need
   public static int[] parseInput (String input) {//changes fraction to whole, numerator, and denominator 
	   	String[] fractions = input.split("/");
	   	String[] wholeNumb = input.split("_");
	   	int[] stringFractoArrayfrac = new int [3];
	   	stringFractoArrayfrac[0]=Integer.parseInt(wholeNumb[0]);
	   	stringFractoArrayfrac[1]=Integer.parseInt(fractions[0]);
	   	stringFractoArrayfrac[2]=Integer.parseInt(fractions[1]);
	   	return stringFractoArrayfrac;

    }
   public static int [] mixedNumb(int[] fraction) {//converts improper frac to mixed frac  
	   for (int i=0; i<3;i++) {
		   fraction [0] = fraction[1]/fraction[2];//whole number
		   fraction [1] = fraction[1]%fraction[2];//numerator
		   fraction [2] = fraction[2];//denominator
	   }
	   
	   return fraction;
   }
   public static int [] improperFrac(int[] fraction) {//converts mixed num to improper frac
	   for (int i = 0; i<3;i++){
		   fraction [i] = fraction[0]*fraction[2];//whole number
		   fraction[i+1] = fraction[0]+fraction[1];//numerator
		   fraction[i+2] = fraction[2];//denominator
	   }
	   fraction[0]=0;
	   return fraction;
   }
   public static int [] subFrac( int []fraction) {//subtract fractions
	   int [] subtracted = new int [3];
	   for (int i=0;i<3;i++) {
		  if (fraction[2] == -fraction[2]|| fraction[5] ==-fraction[5]) {
			  addFrac(fraction);
		  }
		  else if (fraction[2] == fraction[2] || fraction[5] ==fraction[5]) {
			  subtracted[i]=fraction[0]-fraction[3];
			  subtracted[i+1]=fraction[1]-fraction[4];
			  subtracted[i+2]=fraction[2]-fraction[5];
			  }
		  }
	   return subtracted;
   }
   public static int [] addFrac(int []fraction) {//add fractions
	   int[] added = new int[3];
	   for (int i=0;i<3;i++) {
		   if (fraction[2] == -fraction[2] ||fraction[5] ==-fraction[5]) {
			   added[i]=fraction[0]+fraction[3];
			   added[i+1]=fraction[1]+fraction[4];
			   added[i+2]=fraction[2]+fraction[5];
		   } else if (fraction[2] == fraction[2] || fraction[5] ==fraction[5])
			added[i]=fraction[0]+fraction[3];
		   added[i+1]=fraction[1]+fraction[4];
		   added[i+2]=fraction[2]+fraction[5];
	   }
	   return added;
   }
   public static int gcf(int x,int y) {
	   int z = 1;
	   int gcf = z;
		   if (x==-x || y ==-y){
			   gcf = x*y;
		   } else if (x!=-x || y !=-y){
			   gcf = x*y;
		   }
		   gcf = z;
		   return gcf;
	   }
   public static int [] multiFrac (int[] fraction) {//multiply fractions
	   int [] multiplied = new int [3];
	   for (int i=0;i<3;i++) {
		   multiplied [i] = fraction[0]*fraction[3];
		   multiplied [i+1] = fraction[1]*fraction[4];
		   multiplied [i+2] = fraction[2]*fraction[4];
	   }
	   return multiplied;
   }
   public static int [] diviFrac (int[] fraction) {//divides fractions
	   int [] divided = new int [3];
	   for (int i=0;i<3;i++) {
		   divided[0]=fraction[0]*fraction[3];
		   divided[1]=fraction[1]*fraction[5];
		   divided[2]=fraction[2]*fraction[4];
	   }
	   return divided;
   }
   public static int reducedFrac(int [] fraction){//reduce fraction
	   int  reduced =gcf(fraction [1],fraction[2]);
	   fraction [1]=fraction [1]/reduced;
	   fraction [2]=fraction [2]/reduced;
	   return reduced;
   }
}


   
int[] firstSplitFrac = parseInput(splitInput[0]);	//separates individual values for processing before calculation
int[] secondSplitFrac = parseInput(splitInput[2]);
int gcf = (gcf(firstSplitFrac[2],  secondSplitFrac[2]));
int[] impFrac1 = toImproperFrac(firstSplitFrac, gcf);	//converts values to improper fractions
int[] impFrac2 = toImproperFrac(secondSplitFrac, gcf);
boolean add = splitInput[1].equals("+");			//tests operand to find proper method to use
boolean subtract = splitInput[1].equals("-"); ;
boolean multiply = splitInput[1].equals("*");;
boolean divide = splitInput[1].equals("/");;
if (add == true){
	String calculated = addFrac(impFrac1, impFrac2);
}
else if (subtract == true){
	String calculated = subtractFrac(impFrac1, impFrac2);
}
 else if (multiply == true){
	String calculated = multiplyFrac(impFrac1, impFrac2);
}
else if (divide == true){
	String calculated = divideFrac(impFrac1, impFrac2);
	}
String finalAnswer = calculated;
return finalAnswer;





	